<ul id="category-dropdown" class="nav-link-items">
  <% @menu_categories.each do |category| %>
    <li class= "col l3 cat"><a href="#" class="black-text"><%= link_to category.name, category_path(category), class: "black-text" %></a>
      <div class="row">
        <ul class="cat ul">
          <li><img src= "<%= category.products.first.product_image_links.first.
              link_name%>" height="150" width="150">
          </li>
        </ul>
      </div>
      <div class="display-products">
      <% category.subcategories.limit(4).each do |subcategory| %>
        <ul>
          <div class="row">
            <div class="col l1">&nbsp;</div>
              <li class="col l10">
                <%= link_to subcategory.name, "/categories/#{category.id}/subcategory/#{subcategory.id}" %>
              </li>
            <div class="col l1">&nbsp;</div>
          </div>
        </ul>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
