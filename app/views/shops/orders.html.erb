<div class="row">
  <div class="input-field col s4 offset-s8 order-search">
    <i class="material-icons prefix">search</i>
    <input id="icon_prefix" type="text" class="validate">
    <label for="icon_prefix">Search Orders...</label>
  </div>
</div>

<h3 class="orders-header">
  Orders History
</h3>

<div class="row">
  <div class="col s5 pagination-holder">
    <ul class="tabs no-border-bottom">
      <li class="tab col s3"><a href="" >All (<%= all_orders_count %>)</a></li>
      <li class="tab col s3"><a  href="?status=completed">Completed (<%= Order.pending(@shop).count %>)</a></li>
      <li class="tab col s3"><a href="?status=pending" >Pending (<%= Order.completed(@shop).count %>)</a></li>
    </ul>
  </div>
  <div class="col s2 offset-s5">
    <a class="btn-flat tooltipped update-btn" data-delay="5" data-tooltip="Update Orders Status" data-position="top">Update</a>
  </div>
</div>


<div class="action-container" style="display: none;">
   <h4>*Apply action to all marked orders</h4>
   <a class="waves-effect waves-teal btn-flat">Completed</a>
   <a class="waves-effect waves-teal btn-flat">Pending</a>
   <a class="btn-flat btn-red">Delete</a>
</div>

<div class="row">
  <table class="centered bordered">
    <thead>
      <tr>
        <th data-field="check"></th>
        <th data-field="id">Order number</th>
        <th data-field="order-status" width="150px">Order Status</th>
        <th data-field="name">Customer Name</th>
        <th data-field="price">Total Cost (&#8358;)</th>
        <th data-field="price">Order Date</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <input type="checkbox" id='<%= "order#{order.id}" %>'/>
            <label for='<%= "order#{order.id}" %>'></label>
          </td>
          <td><%= order.order_number %></td>
          <td>
            <div class="input-field col s10 text-center">
              <select class="status" value="<%= order.status %>">
                <option value="Pending">Pending</option>
                <option value="Completed">Completed</option>
              </select>
            </div>
          </td>
          <td><%= "#{order.user.first_name} #{order.user.last_name}" %></td>
          <td><%= order.total_amount %></td>
          <td><%= order.purchased_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div class="table-pagination">
  <ul class="pagination">
    <% if total_pages > 1 %>
      <%= previous_link %>
      <%= page_links %>
      <%= next_link %>
    <% end %>
  </ul>
</div>
